#! /bin/bash

echo "    **************************************"
echo "  ****   Proca .vimrc: Installation   ******"
echo "**********************************************"

if [ ! -f ~/.vim/autoload/plug.vim ]; then
  echo "[INFO]  Installing vim-plug for plugin management."
  echo "[INFO]  Open vim and run :PlugInstall to install all."
  curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
fi

if [ -f ~/.vimrc ]; then
  echo "[INFO]  Creating backup for existing .vimrc file..."
  mv ~/.vimrc ~/.vimrc.bak
fi

echo "[INFO]  Setting proca_vimrc as default .vimrc file..."
cp .vimrc ~/.vimrc

echo "  Done."

exit $?
