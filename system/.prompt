
# Prompt settings

GREEN="\[\033[38;5;82m\]"
BLUE="\[\033[38;5;21m\]"
NO_COL="\[\033[0m\]"
LIGHT_BLUE="\[\033[1;38;5;27m\]"


case `uname -s` in 
  Linux*)   export PS1="$LIGHT_BLUE proca$NO_COL in$GREEN \w$LIGHT_BLUE $ $NO_COL";
            export PS2="$LIGHT_BLUE> $NO_COL";;
  Darwin*)  export PS1="$BLUE proca$NO_COL in$GREEN \w$BLUE $ $NO_COL";
            export PS2="$BLUE> $NO_COL";;
  *)        export PS1="proca in \w$ "
            export PS2="> "
esac


